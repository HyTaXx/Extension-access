{
  "manifest_version": 2,
  "name": "DOM Color Changer",
  "version": "1.0",
  "description": "Change the background color of q, b, p, and d elements",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Change Colors"
  }
}